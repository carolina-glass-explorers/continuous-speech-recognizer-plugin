<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="org.apache.cordova.plugin" version="0.2.3">
    <name>Device</name>
    <description>Cordova Device Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,device</keywords>

    <js-module src="www/js/ContinuousSpeechRecognizer.js" name="device">
        <clobbers target="ContinuousSpeechRecognizer" />
    </js-module>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="ContinuousSpeechRecognizer">
                <param name="android-package" value="org.apache.cordova.plugin.ContinuousSpeechRecognizer"/>
            </feature>
        </config-file>
        <!--<header-file src="src/ios/CDVDevice.h" />-->
        <source-file src="src/ContinuousSpeechRecognizer.java" />
    </platform>
</plugin>
